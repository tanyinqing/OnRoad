<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.xlw.ui.activity.TravelNewActivity">

    <TextView
        android:text="@string/title_activity_travel_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topic_about_trval"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="远离生活喧嚣的旅行"
        android:maxLines="6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于本次旅行"
        android:id="@+id/textView6"
        android:layout_below="@+id/topic_about_trval"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:gravity="left|top"
        android:ems="10"
        android:id="@+id/desc_about_trval"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/topic_about_trval"
        android:layout_alignEnd="@+id/topic_about_trval"
        android:ellipsize="end"
        android:hint="请输入关于本次旅行的简单介绍"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美好记忆"
        android:id="@+id/textView7"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/desc_about_trval"
        android:layout_toLeftOf="@+id/image_first_photo"
        android:layout_toStartOf="@+id/image_first_photo"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_take_start_photo"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_first_photo"
        android:src="@mipmap/imageview_jh_hd_bg"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/desc_about_trval"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始本次旅行"
        android:id="@+id/btn_trval_new_start"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/desc_about_trval"
        android:layout_alignEnd="@+id/desc_about_trval"/>

</RelativeLayout>
